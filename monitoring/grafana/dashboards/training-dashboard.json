{
  "dashboard": {
    "id": null,
    "title": "Codelupe Training Dashboard",
    "tags": ["codelupe", "training", "rtx4090"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Training Loss",
        "type": "graph",
        "targets": [
          {
            "expr": "codelupe_training_loss",
            "legendFormat": "Training Loss",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "yAxes": [
          {"label": "Loss", "min": 0}
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 2,
        "title": "Learning Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "codelupe_training_learning_rate",
            "legendFormat": "Learning Rate",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "yAxes": [
          {"label": "LR", "min": 0}
        ]
      },
      {
        "id": 3,
        "title": "GPU Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "codelupe_gpu_memory_used_bytes",
            "legendFormat": "Used Memory",
            "refId": "A"
          },
          {
            "expr": "codelupe_gpu_memory_total_bytes",
            "legendFormat": "Total Memory",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [
          {"label": "Bytes", "min": 0}
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 4,
        "title": "Training Speed",
        "type": "graph",
        "targets": [
          {
            "expr": "codelupe_training_samples_per_second",
            "legendFormat": "Samples/sec",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "yAxes": [
          {"label": "Samples/sec", "min": 0}
        ]
      },
      {
        "id": 5,
        "title": "Training Progress",
        "type": "stat",
        "targets": [
          {
            "expr": "codelupe_training_current_step",
            "legendFormat": "Current Step",
            "refId": "A"
          },
          {
            "expr": "codelupe_training_total_steps",
            "legendFormat": "Total Steps",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 16},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "title": "GPU Temperature",
        "type": "gauge",
        "targets": [
          {
            "expr": "codelupe_gpu_temperature_celsius",
            "legendFormat": "GPU Temp",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 8, "x": 8, "y": 16},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 85}
              ]
            },
            "unit": "celsius",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 7,
        "title": "GPU Utilization",
        "type": "gauge",
        "targets": [
          {
            "expr": "codelupe_gpu_utilization_percent",
            "legendFormat": "GPU Usage",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 16},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "green", "value": 80}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 8,
        "title": "Training Epochs Completed",
        "type": "stat",
        "targets": [
          {
            "expr": "codelupe_training_epochs_completed",
            "legendFormat": "Epochs",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 20},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 9,
        "title": "Model Parameters",
        "type": "stat",
        "targets": [
          {
            "expr": "codelupe_model_total_parameters",
            "legendFormat": "Total Params",
            "refId": "A"
          },
          {
            "expr": "codelupe_model_trainable_parameters",
            "legendFormat": "Trainable Params",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 4, "w": 9, "x": 6, "y": 20},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 10,
        "title": "Training Time Remaining",
        "type": "stat",
        "targets": [
          {
            "expr": "codelupe_training_eta_seconds",
            "legendFormat": "ETA",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 9, "x": 15, "y": 20},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        }
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": [
        {
          "name": "Training Events",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(codelupe_training_current_step[1m]) > 0"
        }
      ]
    },
    "schemaVersion": 27,
    "version": 1,
    "links": []
  }
}